{
  "manifest_version": 3,
  "name": "プライバシー一発クリーン",
  "version": "1.0.0",
  "description": "ワンクリックでクッキー・キャッシュ・履歴を削除。パスワードは守る設定付き。トラッカー嫌いな人に神！",
  "permissions": [
    "browsingData",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
